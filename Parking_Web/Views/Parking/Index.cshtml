@model IList<Parking_Domain.ParkingEntities.Parking>
@{
    ViewData["Title"] = "Index";
}

<h1>Parking</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Address</th>
            <th>Levels</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var parking in Model)
        {
            <tr>
                <td>@parking.Id</td>
                <td>@parking.Address.Country, @parking.Address.City, @parking.Address.Street</td>
                <td>@parking.ParkingLevels.Count</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@parking.Id">Edit | </a>
                    <a asp-action="Details" asp-route-id="@parking.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create</a>