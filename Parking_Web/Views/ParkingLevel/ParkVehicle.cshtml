@model Web.ViewModels.ParkingLevel.ParkVehicleViewModel

@{
    ViewData["Title"] = "ParkVehicle";
}

<h1>ParkVehicle</h1>

<h4>ParkVehicleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ParkVehicle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParkingLevelId" value="@Model.ParkingLevelId" />
            <input type="hidden" asp-for="ParkingSpaceNumber" value="@Model.ParkingSpaceNumber" />
            <div class="form-group">
                <label asp-for="Vehicle.LicensePlate"></label>
                <input asp-for="Vehicle.LicensePlate" class="form-control" />
                <span asp-validation-for="Vehicle.LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vehicle.Weight"></label>
                <input asp-for="Vehicle.Weight" class="form-control" />
                <span asp-validation-for="Vehicle.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
