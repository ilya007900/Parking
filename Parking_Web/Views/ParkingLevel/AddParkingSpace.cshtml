@model Web.ViewModels.ParkingLevel.ParkingLevelAddParkingSpaceViewModel

@{
    ViewData["Title"] = "AddParkingSpaces";
}

<h1>AddParkingSpace</h1>

<h4>ParkingLevelAddParkingSpaceViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddParkingSpace">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParkingLevelId" value="@Model.ParkingLevelId"/>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-parkingLevelId="@Model.ParkingLevelId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
